{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$anchor": "user",
  "description": "A system user",
  "type": "object",
  "properties": {
    "email": {
      "description": "Email address for the user",
      "type": "string",
      "isSearchable": true
    },
    "firstName": {
      "description": "First name of the user",
      "type": "string",
      "default": "Adapt",
      "isSearchable": true
    },
    "lastName": {
      "description": "Last name of the user",
      "type": "string",
      "default": "User",
      "isSearchable": true
    },
    "isEnabled": {
      "description": "Whether the user is able to access the system",
      "type": "boolean",
      "isReadOnly": true,
      "default": true
    },
    "lastAccess": {
      "description": "Timestamp of the last access",
      "type": "string",
      "format": "date-time",
      "isReadOnly": true,
      "isDate": true
    }
  },
  "required": ["email"]
}
