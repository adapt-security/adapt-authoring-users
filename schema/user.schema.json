{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$anchor": "user",
  "description": "A system user",
  "type": "object",
  "properties": {
    "email": {
      "description": "Email address for the user",
      "type": "string",
      "format": "email"
    },
    "firstName": {
      "description": "First name of the user",
      "type": "string",
      "default": "Adapt"
    },
    "lastName": {
      "description": "Last name of the user",
      "type": "string",
      "default": "User"
    }
  },
  "required": ["email"]
}
